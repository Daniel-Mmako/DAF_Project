@page
@model DAF_Project.Pages.Capture.CaptureDisaster.CaptureDisasterModel
@{
    ViewData["Title"] = "Disaster page";
}

<div class="container-fluid border rounded p-5" style="background-color:orange">
    <h2 style="color:purple">Capture a new disaster</h2>
    <h3 style="color:purple">use below form to capture new disasters!</h3>
    <div class="row content">
        <div class="col-sm-9">
            <form method="POST">
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label" style="color:purple">Start Date</label>
                    <div class="col-sm-3">
                        <input type="datetime-local" class="form-control" name="start_date" value="@Model.newStartDate" style="border:2px solid purple" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label" style="color:purple">End Date</label>
                    <div class="col-sm-3">
                        <input type="datetime-local" class="form-control" name="end_date" value="@Model.newEndDate" style="border:2px solid purple" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label" style="color:purple">Location</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" name="location" value="@Model.newLocation" style="border:2px solid purple" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label" style="color:purple">Description</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" name="description" value="@Model.newDescription" style="border:2px solid purple" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label" style="color:purple">Donation Type</label>
                    <div class="col-sm-3">
                        <input type="text" class="form-control" name="type" value="@Model.newType" style="border:2px solid purple" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3">
                        <button type="submit" class="btn" style="background-color:purple;color:white">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>