@page
@model DAF_Project.Pages.Capture.CaptureGoods.CaptureGoodsModel
@{
    ViewData["Title"] = "Goods donation page";
}

<div class="container-fluid border rounded p-5" style="background-color:orange">
    <h2 style="color:purple">Capture new goods</h2>
    <h3 style="color:purple">use this to donate some goods</h3>
    <div class="row content">
        <div class="col-sm-9">
            <form method="POST">
                    <div class="row mb-3">
                    <label class="col-sm-3 col-form-label" style="color:purple">Date</label>
                    <div class="col-sm-6">
                        <input type="datetime-local" class="form-control" name="date" value="@Model.newDate" style="border:2px solid purple" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label" style="color:purple">No. of items</label>
                    <div class="col-sm-6">
                        <input type="number" class="form-control" name="number_of_items" value="@Model.newNumberOfItems" style="border:2px solid purple" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label" style="color:purple">Category</label>
                    <div class="col-sm-2">
                        <select id="category" name="type" style="border:2px solid orange">
                            <option style="color:purple" value="Clothing">Clothing</option>
                            <option style="color:purple" value="Non-Perishable Foods">Non-Perishable Foods</option>
                            <option style="color:purple" value="Add New Item">Add New Item</option>
                        </select>
                    </div>
                </div>
                <div class="row mb-3" id="new-cat">
                    <label class="col-sm-3 col-form-label" style="color:purple">New Category</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="category" value="@Model.newCategory" style="border:2px solid purple" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label" style="color:purple">Description</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="description" value="@Model.newDescription" style="border:2px solid purple" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-3 col-form-label" style="color:purple">Donor</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="donor" value="@Model.newDonor" style="border:2px solid purple" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-6">
                        <button type="submit" class="btn" style="background-color:purple;color:white">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>